<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.text.*?>

<VBox fx:id="container" alignment="TOP_CENTER" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="presentacio.ImportarController">
  <children>
      <MenuBar fx:id="menu">
         <menus>
            <Menu fx:id="menu_arxiu" mnemonicParsing="false" text="Arxiu">
               <items>
                  <MenuItem fx:id="menuitem_importar" mnemonicParsing="false" onAction="#pantalla_importar" text="Importar..." />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem fx:id="menuitem_sortir" mnemonicParsing="false" onAction="#tancar_aplicacio" text="Sortir" />
               </items>
            </Menu>
            <Menu fx:id="menu_registres" mnemonicParsing="false" text="Registres">
               <items>
                  <MenuItem fx:id="menuitem_llistar" mnemonicParsing="false" onAction="#pantalla_registres" text="Veure llistat" />
               </items>
            </Menu>
            <Menu fx:id="menu_informes" mnemonicParsing="false" text="Informes">
               <items>
                  <MenuItem fx:id="menuitem_informes" mnemonicParsing="false" onAction="#pantalla_informes" text="Veure informes" />
               </items>
            </Menu>
         </menus>
      </MenuBar>
      <VBox alignment="TOP_CENTER" VBox.vgrow="ALWAYS">
         <children>
        <Label alignment="CENTER" style="-fx-font-weight: bold;" text="IMPORTAR ARXIU *.XML" textAlignment="CENTER">
          <font>
            <Font size="36.0" />
          </font>
               <VBox.margin>
                  <Insets bottom="30.0" top="30.0" />
               </VBox.margin>
        </Label>
            <HBox alignment="BOTTOM_CENTER">
               <children>
                  <VBox prefWidth="350.0">
                     <children>
                        <Label style="-fx-font-weight: bold;" text="Nom arxiu:">
                           <VBox.margin>
                              <Insets bottom="5.0" />
                           </VBox.margin>
                        </Label>
                        <TextField fx:id="textfield_arxiuXML" />
                     </children>
                  </VBox>
                  <Separator opacity="0.0" orientation="VERTICAL" prefWidth="20.0" />
                  <Button fx:id="btn_obrir" mnemonicParsing="false" onAction="#obrirXML" text="Obrir" />
               </children>
               <VBox.margin>
                  <Insets bottom="20.0" top="20.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="BOTTOM_CENTER" layoutX="30.0" layoutY="163.0">
               <children>
                  <VBox prefWidth="400.0">
                     <children>
                        <HBox alignment="CENTER_LEFT">
                           <children>
                              <CheckBox fx:id="checkbox_desxifrarXML" mnemonicParsing="false" onAction="#indicarClauDesxifrat" text="L'arxiu XML està xifrat" />
                              <Separator opacity="0.0" orientation="VERTICAL" prefWidth="10.0" />
                              <Button fx:id="btn_ajuda" mnemonicParsing="false" onAction="#obrirAjuda" prefHeight="30.0" prefWidth="30.0" text="?" />
                           </children>
                           <VBox.margin>
                              <Insets bottom="5.0" />
                           </VBox.margin>
                        </HBox>
                        <TextField fx:id="textfield_clauDesxifrat" prefWidth="260.0" promptText="Escriu aquí la clau de desxifrat..." />
                     </children>
                  </VBox>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0">
               <children>
                  <Button fx:id="btn_importar" mnemonicParsing="false" onAction="#importarXML" text="Importar arxiu" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
  </children>
</VBox>
